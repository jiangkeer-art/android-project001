<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape">

        <TextView
            android:id="@+id/air_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="南方航空"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/flight_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="15dp"
            android:text="CZ8792"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <View
            android:id="@+id/grey_view1"
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_below="@+id/flight_number"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="#000000" />

        <ImageButton
            android:id="@+id/attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/grey_view1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/shoucang"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/takeoff_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/grey_view1"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:text="21:00"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/departure_terminal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/takeoff_time"
            android:layout_marginLeft="45dp"
            android:text="西安咸阳国际机场"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/is_direct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/grey_view1"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="17dp"
            android:text="直飞"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_below="@id/grey_view1"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/right" />

        <TextView
            android:id="@+id/landing_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/grey_view1"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="15dp"
            android:text="12:55"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/landing_terminal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/takeoff_time"
            android:layout_marginLeft="170dp"
            android:text="大连金州湾国际机场"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/grey_view1"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="9dp"
            android:text="350"
            android:textColor="#F62222"
            android:textSize="27sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/order"
            android:layout_width="50dp"
            android:layout_height="37dp"
            android:layout_below="@id/grey_view1"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="45dp"
            android:backgroundTint="#10C517"
            android:gravity="center"
            android:text="订"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/grey_view2"
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="130dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="140dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/is_bus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/grey_view2"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="经济舱"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/is_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/grey_view2"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="共享航班"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/grey_view2"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="有餐食"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/punctuality_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/grey_view2"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="100%准点率"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/time_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/grey_view2"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="共计60分钟"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>
    </RelativeLayout>



</LinearLayout>