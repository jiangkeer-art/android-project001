<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#D7E6E6">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/air_company"
            android:textSize="10sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:id="@+id/flight_number"
            android:textSize="10sp"/>
        <View
            android:id="@+id/grey_view1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/flight_number"
            android:layout_marginTop="10dp"
            android:background="#000000" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/grey_view1"
            android:layout_marginTop="20dp"
            android:background="@drawable/shoucang"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/grey_view1"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:id="@+id/takeoff_time"
            android:layout_marginLeft="70dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/takeoff_time"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:id="@+id/departure_terminal"
            android:layout_marginLeft="70dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/grey_view1"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:id="@+id/landing_time"
            android:layout_marginLeft="270dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/takeoff_time"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:id="@+id/landing_terminal"
            android:layout_marginLeft="270dp"/>
        <View
            android:id="@+id/grey_view2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/departure_terminal"
            android:layout_marginTop="20dp"
            android:background="#000000" />

    </RelativeLayout>



</LinearLayout>